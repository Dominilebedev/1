from random import *
print("Игра Отгадайка")
print("Я загадаю слово, а ты будешь его угадывать.")
print("Я скажу тебе, сколько букв в этом слове. ")
print("И еще ты можешь 5 раз узнать у меня, есть ли какая-либо буква в этом слове.")
answer = input("Играем? да/нет")
while answer != "нет":
    word = randint(1, 5)
    if word == 1:
        word = "банан"
    elif word == 2:
        word = "вbшня"
    elif word == 3:
        word = "дуриаy"
    elif word == 4:
        word = "черника"
    elif word == 5:
        word = " калина"
    print("В этом слове", len(word), "букв")
    print("Теперь ты можешь 5 раз спросить меня, есть ли какая-то буква в этом слове?")
    for i in range(5):
        letter = input("Напиши букву, которую хочешь проверить?")
        if letter in word:
            print("Да")
        else:
            print("Нет")
    guess = input("Какое слово было загадано?")
    if guess == word:
        print("Ура, ты угадал!")
    else:
        print("Поздавляю!")
        print("ты проиграл!")
        print('''
